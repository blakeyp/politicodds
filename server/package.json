{
  "name": "politicodds-server",
  "version": "1.0.0",
  "description": "Backend REST API for political betting data",
  "repository": "github:blakeyp/politicodds",
  "main": "dist/server.js",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "start": "node dist/server.js",
    "watch": "tsc-watch --onSuccess \"npm run start\"",
    "debug": "tsc && node --inspect dist/server.js",
    "test": "jest",
    "coverage": "jest --coverage --collectCoverageFrom='src/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test"
    }
  },
  "author": "blakeyp",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.1.1",
    "@types/node": "^13.9.8",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "eslint": "^6.8.0",
    "eslint-config-standard-with-typescript": "^11.0.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.0.10",
    "jest": "^25.1.0",
    "ts-jest": "^25.3.0",
    "tsc-watch": "^4.2.8",
    "typescript": "^3.7.5"
  }
}
